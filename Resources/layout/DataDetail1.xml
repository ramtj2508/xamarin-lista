<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23369F"
    tools:context=".MainActivity">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="421dp"
        android:layout_height="248dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:mapType="hybrid" />

    <ImageView
        android:id="@+id/imageback"
        android:layout_width="410dp"
        android:layout_height="370dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="113dp"
        app:layout_constraintBottom_toTopOf="@+id/mapView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="154dp"
        android:layout_height="141dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/txtage"
        app:layout_constraintEnd_toEndOf="@+id/imageback"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/imageback" />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="201dp"
        android:layout_height="29dp"
        android:layout_marginTop="36dp"
        android:background="#3F51B5"
        android:text="Cliente"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/image"
        app:layout_constraintEnd_toEndOf="@+id/imageback"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/imageback"
        app:layout_constraintTop_toTopOf="@+id/imageback"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="#3F51B5"
        android:text="Edad"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtrevenues"
        app:layout_constraintEnd_toStartOf="@+id/txtaddress"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="@+id/imageback" />

    <TextView
        android:id="@+id/txtaddress"
        android:layout_width="186dp"
        android:layout_height="30dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="24dp"
        android:background="#3F51B5"
        android:text="DirecciÃ³n"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtmail"
        app:layout_constraintEnd_toEndOf="@+id/imageback"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtmail"
        android:layout_width="186dp"
        android:layout_height="32dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="8dp"
        android:background="#3F51B5"
        android:text="Correo"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageback"
        app:layout_constraintEnd_toEndOf="@+id/imageback" />

    <TextView
        android:id="@+id/txtrevenues"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:background="#3F51B5"
        android:text="Saldo"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageback"
        app:layout_constraintEnd_toStartOf="@+id/txtmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageback" />

</androidx.constraintlayout.widget.ConstraintLayout>